pipeline {
    // add your slave label name
    agent { label 'slave_maven'}
    tools{
        maven 'maven-test'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn clean package'
            }
        }
        
        stage ('deploy') {

            steps {
               sshagent{['tomcat-web-server']}{
	      sh "scp -o StrictHostKeyChecking-no target/maven-web-application.war  ec2-user@13.49.80.51:/opt/tomcat9/webapps/"
                 
	     
	     }   
            }
         }

      }  
    }

