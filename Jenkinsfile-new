pipeline {
    // add your slave label name
    agent { label 'slave_maven'}
    tools{
        maven 'maven-test'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
               sshagent{['tomcat-web-server']}{
	      sh "scp -o StrintHostKeyChecking-no target/maven-web-application.war  ec2-user@16.16.184.118:/opt/tomcat9/webapps/"
                 
	     
	     }   
            }
         }

      }  
    }

